    <script>
        // –ì–ª–æ–±–∞–ª—å–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let records = JSON.parse(localStorage.getItem('fitnessPressureRecords') || '[]');
        let currentQuickMode = null;
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        document.addEventListener('DOMContentLoaded', function() {
            loadHistory();
            updateStats();
            
            // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ "–∫–æ–≥–¥–∞ –∏–∑–º–µ—Ä—è–ª–∏"
            document.getElementById('pressure-when').addEventListener('change', function() {
                const when = this.value;
                const linkSection = document.getElementById('training-link-section');
                
                if (when === 'before-training' || when === 'after-training') {
                    linkSection.style.display = 'block';
                    updateTrainingLinks();
                } else {
                    linkSection.style.display = 'none';
                }
            });
        });
        
        // –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –≤–∫–ª–∞–¥–æ–∫
        function showTab(tabName) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ –≤–∫–ª–∞–¥–∫–∏
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            document.querySelectorAll('.nav-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—É—é
            document.getElementById(`tab-${tabName}`).classList.add('active');
            document.querySelector(`.nav-tab[data-tab="${tabName}"]`).classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –¥–∞–Ω–Ω—ã–µ –µ—Å–ª–∏ –Ω—É–∂–Ω–æ
            if (tabName === 'history') loadHistory();
            if (tabName === 'stats') updateStats();
            
            // –°–∫—Ä—ã—Ç—å –±—ã—Å—Ç—Ä—É—é —Ñ–æ—Ä–º—É
            cancelQuickForm();
        }
        
        // ============ –ë–´–°–¢–†–´–ô –°–¢–ê–†–¢ ============
        function startQuickTraining() {
            currentQuickMode = 'training';
            showTab('trainings');
        }
        
        function startQuickPressure() {
            currentQuickMode = 'pressure';
            showTab('pressure');
        }
        
        function startQuickCombined() {
            const form = document.getElementById('quick-form');
            const content = document.getElementById('quick-form-content');
            
            content.innerHTML = `
                <div class="form-title">üèãÔ∏è‚ù§Ô∏è –ë—ã—Å—Ç—Ä–∞—è —Å–≤—è–∑–∫–∞</div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label>–¢–∏–ø —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏</label>
                        <input type="text" id="quick-training-type" placeholder="–ö–∞—Ä–¥–∏–æ, —Å–∏–ª–æ–≤–∞—è...">
                    </div>
                    <div class="form-group">
                        <label>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å (–º–∏–Ω)</label>
                        <input type="number" id="quick-duration" placeholder="60">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>–ö–æ–≥–¥–∞ –∏–∑–º–µ—Ä—è–ª–∏ –¥–∞–≤–ª–µ–Ω–∏–µ?</label>
                    <select id="quick-when">
                        <option value="before-training">–ü–µ—Ä–µ–¥ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–æ–π</option>
                        <option value="after-training">–ü–æ—Å–ª–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏</option>
                        <option value="both">–î–æ –∏ –ø–æ—Å–ª–µ</option>
                    </select>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label>–î–∞–≤–ª–µ–Ω–∏–µ</label>
                        <div style="display: flex; gap: 10px;">
                            <input type="number" id="quick-systolic" placeholder="120" style="flex: 1;">
                            <span>/</span>
                            <input type="number" id="quick-diastolic" placeholder="80" style="flex: 1;">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>–ü—É–ª—å—Å</label>
                        <input type="number" id="quick-pulse" placeholder="75">
                    </div>
                </div>
                
                <textarea id="quick-notes" placeholder="–ó–∞–º–µ—Ç–∫–∏..." style="margin-top: 15px;"></textarea>
            `;
            
            form.style.display = 'block';
            form.scrollIntoView({ behavior: 'smooth' });
        }
        
        function saveQuickRecord() {
            if (currentQuickMode === 'combined') {
                // –°–æ—Ö—Ä–∞–Ω—è–µ–º —Å–≤—è–∑–∫—É
                const record = {
                    id: Date.now(),
                    type: 'combined',
                    timestamp: new Date().toISOString(),
                    date: new Date().toLocaleString('ru-RU'),
                    
                    training: {
                        type: document.getElementById('quick-training-type').value || '–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞',
                        duration: parseInt(document.getElementById('quick-duration').value) || null,
                        when: document.getElementById('quick-when').value
                    },
                    
                    pressure: {
                        systolic: parseInt(document.getElementById('quick-systolic').value) || 0,
                        diastolic: parseInt(document.getElementById('quick-diastolic').value) || 0,
                        pulse: parseInt(document.getElementById('quick-pulse').value) || 0
                    },
                    
                    notes: document.getElementById('quick-notes').value || ''
                };
                
                records.unshift(record);
                localStorage.setItem('fitnessPressureRecords', JSON.stringify(records));
                
                alert('‚úÖ –°–≤—è–∑–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!');
                cancelQuickForm();
                showTab('history');
            }
        }
        
        function cancelQuickForm() {
            document.getElementById('quick-form').style.display = 'none';
            currentQuickMode = null;
        }
        
        // ============ –¢–†–ï–ù–ò–†–û–í–ö–ò ============
        function saveTraining() {
            const record = {
                id: Date.now(),
                type: 'training',
                timestamp: new Date().toISOString(),
                date: new Date().toLocaleString('ru-RU'),
                
                trainingType: document.getElementById('training-type').value || '',
                duration: parseInt(document.getElementById('training-duration').value) || null,
                exercises: document.getElementById('training-exercises').value || '',
                intensity: document.getElementById('training-intensity').value || '',
                feeling: document.getElementById('training-feeling').value || ''
            };
            
            records.unshift(record);
            localStorage.setItem('fitnessPressureRecords', JSON.stringify(records));
            
            alert('‚úÖ –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞!');
            clearTrainingForm();
            showTab('history');
        }
        
        function saveTrainingWithPressure() {
            // –°–Ω–∞—á–∞–ª–∞ —Å–æ—Ö—Ä–∞–Ω—è–µ–º —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É
            const trainingId = Date.now();
            const trainingRecord = {
                id: trainingId,
                type: 'training',
                timestamp: new Date().toISOString(),
                date: new Date().toLocaleString('ru-RU'),
                
                trainingType: document.getElementById('training-type').value || '',
                duration: parseInt(document.getElementById('training-duration').value) || null,
                exercises: document.getElementById('training-exercises').value || '',
                intensity: document.getElementById('training-intensity').value || '',
                feeling: document.getElementById('training-feeling').value || ''
            };
            
            records.unshift(trainingRecord);
            
            // –ó–∞—Ç–µ–º –ø–µ—Ä–µ—Ö–æ–¥–∏–º –Ω–∞ –≤–∫–ª–∞–¥–∫—É –¥–∞–≤–ª–µ–Ω–∏—è
            showTab('pressure');
            
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Å–≤—è–∑—å —Å —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–æ–π
            document.getElementById('pressure-when').value = 'after-training';
            document.getElementById('training-link-section').style.display = 'block';
            updateTrainingLinks();
            
            // –ù–∞–π—Ç–∏ —Ç–æ–ª—å–∫–æ —á—Ç–æ —Å–æ–∑–¥–∞–Ω–Ω—É—é —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É
            setTimeout(() => {
                const select = document.getElementById('pressure-training-link');
                select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É...</option>';
                const option = document.createElement('option');
                option.value = trainingId;
                option.textContent = `–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞ –æ—Ç ${new Date().toLocaleTimeString('ru-RU')}`;
                select.appendChild(option);
                select.value = trainingId;
            }, 100);
            
            alert('üìù –¢–µ–ø–µ—Ä—å –¥–æ–±–∞–≤—å—Ç–µ –∏–∑–º–µ—Ä–µ–Ω–∏–µ –¥–∞–≤–ª–µ–Ω–∏—è');
        }
        
        function clearTrainingForm() {
            document.getElementById('training-type').value = '';
            document.getElementById('training-duration').value = '';
            document.getElementById('training-exercises').value = '';
            document.getElementById('training-intensity').value = '';
            document.getElementById('training-feeling').value = '';
        }
        
        // ============ –î–ê–í–õ–ï–ù–ò–ï ============
        function savePressure() {
            const record = {
                id: Date.now(),
                type: 'pressure',
                timestamp: new Date().toISOString(),
                date: new Date().toLocaleString('ru-RU'),
                
                systolic: parseInt(document.getElementById('pressure-systolic').value) || 0,
                diastolic: parseInt(document.getElementById('pressure-diastolic').value) || 0,
                pulse: parseInt(document.getElementById('pressure-pulse').value) || 0,
                when: document.getElementById('pressure-when').value || 'general',
                trainingId: document.getElementById('pressure-training-link').value || null,
                notes: document.getElementById('pressure-notes').value || ''
            };
            
            // –ï—Å–ª–∏ –µ—Å—Ç—å —Å–≤—è–∑—å —Å —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–æ–π, –æ–±–Ω–æ–≤–ª—è–µ–º –∏ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É
            if (record.trainingId) {
                const trainingIndex = records.findIndex(r => r.id == record.trainingId);
                if (trainingIndex !== -1) {
                    records[trainingIndex].pressureLinked = true;
                    records[trainingIndex].pressureWhen = record.when;
                }
            }
            
            records.unshift(record);
            localStorage.setItem('fitnessPressureRecords', JSON.stringify(records));
            
            alert('‚úÖ –ò–∑–º–µ—Ä–µ–Ω–∏–µ –¥–∞–≤–ª–µ–Ω–∏—è —Å–æ—Ö—Ä–∞–Ω–µ–Ω–æ!');
            clearPressureForm();
            showTab('history');
        }
        
        function updateTrainingLinks() {
            const select = document.getElementById('pressure-training-link');
            const trainings = records.filter(r => r.type === 'training' && !r.pressureLinked);
            
            select.innerHTML = '<option value="">–í—ã–±–µ—Ä–∏—Ç–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫—É...</option>';
            trainings.forEach(training => {
                const option = document.createElement('option');
                option.value = training.id;
                const time = new Date(training.timestamp).toLocaleTimeString('ru-RU', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });
                option.textContent = `${time} - ${training.trainingType || '–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞'}`;
                select.appendChild(option);
            });
        }
        
        function clearPressureForm() {
            document.getElementById('pressure-systolic').value = '';
            document.getElementById('pressure-diastolic').value = '';
            document.getElementById('pressure-pulse').value = '';
            document.getElementById('pressure-when').value = 'general';
            document.getElementById('pressure-training-link').value = '';
            document.getElementById('pressure-notes').value = '';
            document.getElementById('training-link-section').style.display = 'none';
        }
        
        // ============ –ò–°–¢–û–†–ò–Ø ============
        function loadHistory(filter = 'all') {
            const container = document.getElementById('history-records');
            
            let filteredRecords = records;
            if (filter === 'training') {
                filteredRecords = records.filter(r => r.type === 'training');
            } else if (filter === 'pressure') {
                filteredRecords = records.filter(r => r.type === 'pressure');
            }
            
            if (filteredRecords.length === 0) {
                container.innerHTML = `
                    <div style="text-align: center; padding: 60px 20px; color: #6c757d;">
                        <div style="font-size: 48px; margin-bottom: 20px;">üì≠</div>
                        <h3>–ù–µ—Ç –∑–∞–ø–∏—Å–µ–π</h3>
                        <p>–ù–∞—á–Ω–∏—Ç–µ —Å –≤–∫–ª–∞–¥–∫–∏ "–ë—ã—Å—Ç—Ä—ã–π —Å—Ç–∞—Ä—Ç"</p>
                    </div>
                `;
                return;
            }
            
            let html = '';
            filteredRecords.forEach(record => {
                html += renderRecord(record);
            });
            
            container.innerHTML = html;
        }
        
        function renderRecord(record) {
            let typeBadge = '';
            let content = '';
            
            if (record.type === 'training') {
                typeBadge = `<span class="record-type type-training">üèãÔ∏è –¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞</span>`;
                
                content = `
                    <div class="record-content">
                        <div><strong>–¢–∏–ø:</strong> ${record.trainingType || '–ù–µ —É–∫–∞–∑–∞–Ω'}</div>
                        ${record.duration ? `<div><strong>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:</strong> ${record.duration} –º–∏–Ω</div>` : ''}
                        ${record.intensity ? `<div><strong>–ò–Ω—Ç–µ–Ω—Å–∏–≤–Ω–æ—Å—Ç—å:</strong> ${record.intensity}</div>` : ''}
                        ${record.feeling ? `<div><strong>–°–∞–º–æ—á—É–≤—Å—Ç–≤–∏–µ:</strong> ${record.feeling}</div>` : ''}
                        ${record.exercises ? `<div style="margin-top: 10px; white-space: pre-line;">${record.exercises}</div>` : ''}
                        ${record.pressureLinked ? `<div style="margin-top: 10px; color: #764ba2; font-weight: 500;">üìé –°–≤—è–∑–∞–Ω–æ —Å –∏–∑–º–µ—Ä–µ–Ω–∏–µ–º –¥–∞–≤–ª–µ–Ω–∏—è (${record.pressureWhen})</div>` : ''}
                    </div>
                `;
            } 
            else if (record.type === 'pressure') {
                typeBadge = `<span class="record-type type-pressure">‚ù§Ô∏è –î–∞–≤–ª–µ–Ω–∏–µ</span>`;
                
                const whenMap = {
                    'general': '–û–±—ã—á–Ω–æ–µ –∏–∑–º–µ—Ä–µ–Ω–∏–µ',
                    'before-training': '–ü–µ—Ä–µ–¥ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–æ–π',
                    'after-training': '–ü–æ—Å–ª–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏',
                    'morning': '–£—Ç—Ä–µ–Ω–Ω–µ–µ',
                    'evening': '–í–µ—á–µ—Ä–Ω–µ–µ',
                    'night': '–ù–æ—á–Ω–æ–µ',
                    'symptoms': '–ü—Ä–∏ —Å–∏–º–ø—Ç–æ–º–∞—Ö'
                };
                
                content = `
                    <div class="record-content">
                        <div><strong>–î–∞–≤–ª–µ–Ω–∏–µ:</strong> ${record.systolic}/${record.diastolic}</div>
                        <div><strong>–ü—É–ª—å—Å:</strong> ${record.pulse} —É–¥/–º–∏–Ω</div>
                        <div><strong>–ö–æ–≥–¥–∞:</strong> ${whenMap[record.when] || record.when}</div>
                        ${record.notes ? `<div style="margin-top: 10px; white-space: pre-line;">${record.notes}</div>` : ''}
                        ${record.trainingId ? `<div style="margin-top: 10px; color: #667eea;">üìé –ü—Ä–∏–≤—è–∑–∞–Ω–æ –∫ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–µ</div>` : ''}
                    </div>
                `;
            }
            else if (record.type === 'combined') {
                typeBadge = `<span class="record-type type-combined">üèãÔ∏è‚ù§Ô∏è –°–≤—è–∑–∫–∞</span>`;
                
                const whenMap = {
                    'before-training': '–ü–µ—Ä–µ–¥ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–æ–π',
                    'after-training': '–ü–æ—Å–ª–µ —Ç—Ä–µ–Ω–∏—Ä–æ–≤–∫–∏',
                    'both': '–î–æ –∏ –ø–æ—Å–ª–µ'
                };
                
                content = `
                    <div class="record-content">
                        <div><strong>–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞:</strong> ${record.training.type}</div>
                        ${record.training.duration ? `<div><strong>–î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å:</strong> ${record.training.duration} –º–∏–Ω</div>` : ''}
                        <div><strong>–î–∞–≤–ª–µ–Ω–∏–µ –∏–∑–º–µ—Ä–∏–ª–∏:</strong> ${whenMap[record.training.when] || record.training.when}</div>
                        <div><strong>–î–∞–≤–ª–µ–Ω–∏–µ:</strong> ${record.pressure.systolic}/${record.pressure.diastolic}</div>
                        <div><strong>–ü—É–ª—å—Å:</strong> ${record.pressure.pulse} —É–¥/–º–∏–Ω</div>
                        ${record.notes ? `<div style="margin-top: 10px; white-space: pre-line;">${record.notes}</div>` : ''}
                    </div>
                `;
            }
            
            return `
                <div class="record-card fade-in">
                    <div class="record-header">
                        <div class="record-date">${record.date}</div>
                        ${typeBadge}
                    </div>
                    ${content}
                    <div class="record-footer">
                        <div></div>
                        <div class="record-actions">
                            <button class="action-btn" onclick="deleteRecord(${record.id})">üóë –£–¥–∞–ª–∏—Ç—å</button>
                        </div>
                    </div>
                </div>
            `;
        }
        
        function filterRecords(type) {
            loadHistory(type);
        }
        
        // ============ –°–¢–ê–¢–ò–°–¢–ò–ö–ê ============
        function updateStats() {
            const trainings = records.filter(r => r.type === 'training').length;
            const pressure = records.filter(r => r.type === 'pressure').length;
            const combined = records.filter(r => r.type === 'combined').length;
            
            document.getElementById('stat-total').textContent = records.length;
            document.getElementById('stat-trainings').textContent = trainings;
            document.getElementById('stat-pressure').textContent = pressure;
            document.getElementById('stat-combined').textContent = combined;
        }
        
        // ============ –£–¢–ò–õ–ò–¢–´ ============
        function deleteRecord(id) {
            if (confirm('–£–¥–∞–ª–∏—Ç—å —ç—Ç—É –∑–∞–ø–∏—Å—å?')) {
                records = records.filter(r => r.id !== id);
                localStorage.setItem('fitnessPressureRecords', JSON.stringify(records));
                loadHistory();
                updateStats();
            }
        }
        
        function exportJSON() {
            const dataStr = JSON.stringify(records, null, 2);
            const blob = new Blob([dataStr], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `—Ñ–∏—Ç–Ω–µ—Å_–¥–∞–≤–ª–µ–Ω–∏–µ_${new Date().toISOString().split('T')[0]}.json`;
            a.click();
        }
        
        function exportCSV() {
            let csv = '–¢–∏–ø;–î–∞—Ç–∞;–ü–∞—Ä–∞–º–µ—Ç—Ä—ã\n';
            
            records.forEach(record => {
                if (record.type === 'training') {
                    csv += `–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞;${record.date};"–¢–∏–ø: ${record.trainingType}, –î–ª–∏—Ç–µ–ª—å–Ω–æ—Å—Ç—å: ${record.duration || ''} –º–∏–Ω"\n`;
                } else if (record.type === 'pressure') {
                    csv += `–î–∞–≤–ª–µ–Ω–∏–µ;${record.date};"${record.systolic}/${record.diastolic}, –ü—É–ª—å—Å: ${record.pulse}"\n`;
                } else if (record.type === 'combined') {
                    csv += `–°–≤—è–∑–∫–∞;${record.date};"–¢—Ä–µ–Ω–∏—Ä–æ–≤–∫–∞: ${record.training.type}, –î–∞–≤–ª–µ–Ω–∏–µ: ${record.pressure.systolic}/${record.pressure.diastolic}"\n`;
                }
            });
            
            const blob = new Blob([csv], { type: 'text/csv;charset=utf-8;' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `—Ñ–∏—Ç–Ω–µ—Å_–¥–∞–≤–ª–µ–Ω–∏–µ_${new Date().toISOString().split('T')[0]}.csv`;
            a.click();
        }
        
        function clearAllData() {
            if (confirm('–í–ù–ò–ú–ê–ù–ò–ï! –£–¥–∞–ª–∏—Ç—å –í–°–ï –¥–∞–Ω–Ω—ã–µ? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.')) {
                records = [];
                localStorage.removeItem('fitnessPressureRecords');
                loadHistory();
                updateStats();
                alert('–í—Å–µ –¥–∞–Ω–Ω—ã–µ —É–¥–∞–ª–µ–Ω—ã');
            }
        }
    </script>
</body>
</html>
